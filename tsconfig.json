{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@framework/*": ["Framework/src/*"]
    },
    "allowJs": true
  },
  "include": ["src/**/*.ts", "Core/*.ts"],
  "exclude": ["node_modules", "dist"]
}
